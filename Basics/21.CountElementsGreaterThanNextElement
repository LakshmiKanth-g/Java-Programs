/*
Count Elements Greater than Their Next Element
Given an integer array, count how many elements are greater than the element that directly follows them in the array.
Input: arr = [10, 5, 8, 7, 3]
Output: 3
 */

public class CountElementsGreaterThanNextElement {
	
	public static boolean countDigits(int num,int num1) {
		if(!(num>num1)) {
			return false;
		}
		return true;
	}

	public static void main(String[] args) {
		
		int arr[]= {10,5,8,7,3,5,7,2};
		int n=arr.length;
		int count=0;
		for(int i=0;i<n-1;i++) {
			if(arr[i]>arr[i+1]) {
				count++;
			}
		} 
		System.out.println(count);
		
		//2nd method
		int[] arr1= {1,3,2,6,3,7,5,9,7,2};
		int n1=arr1.length, count1=0;
		for(int i=0;i<n1-1;i++) {
			if(countDigits(arr1[i],arr1[i+1])) {
				count1++;
			}
		}
		System.out.println("count is "+count1);
	}

}

/*
4
count is 5
*/
